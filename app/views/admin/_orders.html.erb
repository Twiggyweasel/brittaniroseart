<table class='table table-bordered'>
  <thead>
    <tr>
      <th>Order Number</th>
      <th>Order Status</th>
      <th>First Name</th>
      <th>last Name</th>
      <th>Email</th>
      <th>Phone #</th>
      <th>Street Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order|%>
    <tr>
      <td><%= order.order_number %></td>
      <td><%=order.order_status.name %></td>
      <% if order.billing.nil? %>
      <td>N/A</td>
      <td>N/A</td>
      <td>N/A</td>
      <td>N/A</td>
      <td>N/A</td>
      <td>N/A</td>
      <td>N/A</td>
      <td>N/A</td>
      <td></td>
      <% else %>
      <td><%= order.billing.first_name %></td>
      <td><%= order.billing.last_name %></td>
      <td><%= order.billing.email %></td>
      <td><%= order.billing.phone %></td>
      <td><%= order.billing.street %></td>
      <td><%= order.billing.city %></td>
      <td><%= order.billing.state %></td>
      <td><%= order.billing.zip %></td>
      <td><%= link_to "Details", order_path(order), class: 'btn btn-primary' %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>