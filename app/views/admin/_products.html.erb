
<div class='col-md-2'>
        <%= link_to "New Product", new_product_path, class: 'btn btn-primary' %>
        
        </div>
        <div class='col-md-2'>
        <%= link_to "New Category", new_product_path, class: 'btn btn-primary' %>
        </div>
        <div class='col-md-2 pull-right'>
          <Select class='form-control'>
            <option>All Items</option>
            <option>Featured Items</option>
            <option>Item Type</option>
          </Select>
        </div>
        <br/>
        <br/>
        <br/>
        <div class='row'>
        <table class='table table-bordered'>
          <thead>
            <tr>
              <th>Product Image</th>
              <th>Product Name</th>
              <th>Category</th>
              <th>Unit Price</th>
              <th>Description</th>
              <th>Featured</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |products| %>
            <tr>
  <td><img src="http://placehold.it/65x56"></td>
  <td><%= products.name %></td>
  <td><%= products.category.name %></td>
  <td><%= number_to_currency products.price %></td>
  <td><%= products.description %></td>
  <td><%= products.featured %></td>
  <td><%= link_to "edit", edit_product_path(products), class: 'btn btn-primary'%>
  /
  <%= link_to "delete", product_path(products), :metdod => :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </td>
      
</tr>
            <% end %>
           </tbody>
        </table>
        </div>