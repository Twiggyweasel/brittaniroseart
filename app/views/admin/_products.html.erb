<tr>
  <td></td>
  <td><%= products.name %></td>
  <td><%= number_to_currency products.price %></td>
  <td><%= products.description %></td>
  <td><%= products.featured %></td>
  <td><%= link_to "edit", edit_product_path(products), class: 'btn btn-primary'%>
