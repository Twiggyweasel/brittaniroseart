<div class='well'>
<h2>Order Number <%= @order.order_number %></h2><h3>Status - <%= @order.order_status.name %></h3>
</div>
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Tracking Number</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @order.billing.first_name %> <%= @order.billing.last_name %></td>
        <td><%= @order.billing.street %></td>
        <td><%= @order.billing.city %></td>
        <td><%= @order.billing.state %></td>
        <td><%= @order.billing.zip %></td>
        <% if @order.tracking.nil? %>
        <td>Pending</td>
        <% else %>
        <td><%= @order.tracking %></td>
        <% end %>
      </tr>
      
    </tbody>
  </table>
  
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th>Item Name</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Total Price</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_items.each do |items| %>
      <tr>
        <td><%= items.product.name %></td>
        <td><%= items.quantity.to_i %></td>
        <td><%= number_to_currency items.unit_price %></td>
        <td><%= number_to_currency items.total_price %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<%= link_to "All Orders", admin_path, class: 'btn btn-info' %>
<%= link_to "Update Order", edit_order_path(@order), class: 'btn btn-primary' %>