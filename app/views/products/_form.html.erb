<%= form_for(@products, html: {multipart: true }) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <br>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
  <%= f.label :price %>
  <%= f.number_field :price, class: "form-control", value: 1.00 %>
  <br>
  <%= f.label "Category" %>
  <br>
  <%= f.select :category_id, @category.collect { |c| [c.name, c.id] }, class: 'form-control' %>
  <br>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
  <br>
  <%= f.check_box :featured %>
  <%= f.label "Featured Item" %>
  <br />
  <%= f.submit(@products.new_record? ? "Create New Product" : "Edit Product", class: "btn btn-success") %>
<% end %>