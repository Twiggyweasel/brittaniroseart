<div class='row'>
    <div class='col-md-8 col-md-offset-2'>
        <div class='well'>
            <h1>New Product</h1>
            <%= form_for @products do |f| %>
            <%= f.text_field :name, class: "form-control", placeholder: "Product Name" %>
            <%= f.number_field :price, class: "form-control", value: 1.00 %>
            <%= f.label "Featured Item?" %>
            <%= f.check_box :featured %> <br />
            <%= f.submit "Create New Product", class: "btn btn-success" %>
            <% end %>
        </div>
    </div>
</div>