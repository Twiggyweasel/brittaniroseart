<div class='col-md-6 col-md-offset-3 well'>
  <span class='title'>Order Lookup</span>
 
<%= form_tag order_lookup_path, method: :get do -%>
  <label>Please enter Order Number</label> 
  <%= text_field_tag :order_number, nil , class: 'form-control' -%>
  <br>
  <%= submit_tag "Search", class: 'btn btn-default btn-block' -%>
<% end -%>
</div>